{% extends "layout.twig" %}

{% block content %}
<h1>Ajouter une catégorie de congé</h1>

    {% if flash('success') %}
        <div class="alert alert-success">{{ flash('success')[0] }}</div>
    {% endif %}
    {% if flash('error') %}
        <div class="alert alert-danger">{{ flash('error')[0] }}</div>
    {% endif %}

    <form action="{{ path_for('categories/add') }}" method="post">
        <div class="form-group">
            <label for="categoriesInputName">Nom catégorie</label>
            <input type="text" class="form-control" id="categoriesInputName" placeholder="Nom" name="name">
        </div>
        <div class="form-group">
            <label for="categoriesInputNumber">Nombre de jour</label>
            <input type="number" class="form-control" id="categoriesInputNumber" placeholder="Nombre" name="number_days">
        </div>
        <div class="form-group">
            <label for="categoriesInputPostponed">Nombre de jour pouvant etre reporter</label>
            <input type="number" class="form-control" id="categoriesInputPostponed" placeholder="Nombre" name="postponed_days" value="0">
        </div>
        <div class="form-group">
            <label for="categoriesInputValidity">Nombre de jour de validité du congé</label>
            <input type="number" class="form-control" id="categoriesInputValidity" placeholder="Nombre" name="validity_days">
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>


{% endblock %}