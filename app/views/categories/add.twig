{% extends "layout.twig" %}

{% block content %}
<h1>Ajouter une catégorie de congé</h1>

    {% if flash('success') %}
        <div class="alert alert-success">{{ flash('success')[0] }}</div>
    {% endif %}
    {% if flash('error') %}
        <div class="alert alert-danger">{{ flash('error')[0] }}</div>
    {% endif %}

    <form action="{{ path_for('categories/add') }}" method="post">

        <div class="form-group{% if flash('errors.name') %} has-error{% endif %}">
            <label for="categoriesInputName">Nom catégorie</label>
            <input type="text" class="form-control" id="categoriesInputName" placeholder="Nom" name="name" value="{{ old.name }}">
            {% if flash('errors.name') %}
                <span class="help-block">{{ flash('errors.name')[0] }}</span>
            {% endif %}
        </div>
        <div class="form-group{% if flash('errors.postponed_days') %} has-error{% endif %}">
            <label for="categoriesInputPostponed">Nombre de jour pouvant etre reporter</label>
            <input type="number" class="form-control" id="categoriesInputPostponed" placeholder="Nombre" name="postponed_days" value="{{ old.postponed_days }}">
            {% if flash('errors.postponed_days') %}
                <span class="help-block">{{ flash('errors.postponed_days')[0] }}</span>
            {% endif %}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>


{% endblock %}